<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbs.lyb.pp.dao.PartyDao">
	<insert id="createParty">
		INSERT INTO `party`
		SET regDate = NOW(),
		updateDate = NOW(),
		`name` = #{name},
		`body` = #{body},
		`code` = #{code}
	</insert>
	
	<select id="getPartyByName" resultType="Party">
		SELECT *
		FROM `party`
		WHERE `name` = #{name}
	</select>
	
	<select id="getPartyById" resultType="Party">
		SELECT *
		FROM `party`
		WHERE `id` = #{id}
	</select>
	
	<delete id="delete">
		DELETE FROM `party`
		WHERE id = #{id}
	</delete>
	
	<select id="getPartyListBySearchKeyword" resultType="Party">
		SELECT *
		FROM `party`
		WHERE
		`name` LIKE CONCAT('%',#{searchKeyword},'%')
	</select>
	
	<update id="sizeUp">
		UPDATE `party`
		SET memberCount = memberCount + 1
		WHERE id = #{id}
	</update>
	
	<update id="sizeDown">
		UPDATE `party`
		SET memberCount = memberCount - 1
		WHERE id = #{id}
	</update>
</mapper>
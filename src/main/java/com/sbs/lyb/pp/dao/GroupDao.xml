<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">

<mapper namespace="com.sbs.lyb.pp.dao.GroupDao">
	<insert id="createGroup">
		INSERT INTO `group`
		SET regDate = NOW(),
		updateDate = NOW(),
		`name` = #{name},
		`body` = #{body}
	</insert>
	
	<select id="getGroupByName" resultType="Group">
		SELECT *
		FROM `group`
		WHERE `name` = #{name}
	</select>
	
	<select id="getGroupById" resultType="Group">
		SELECT *
		FROM `group`
		WHERE `id` = #{id}
	</select>
</mapper>